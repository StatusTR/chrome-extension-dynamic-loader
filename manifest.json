{
  "manifest_version": 3,
  "name": "Postbank Financial Overview Helper",
  "version": "1.0",
  "description": "Runs on Postbank financial overview page",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://banking.postbank.de/*"],
  "content_scripts": [
    {
      "matches": ["https://banking.postbank.de/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ]
}
