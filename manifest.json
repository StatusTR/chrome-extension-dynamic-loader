{
  "manifest_version": 3,
  "name": "Dynamic Page Modifier",
  "version": "1.0",
  "description": "Dynamically loads and applies page modifications from GitHub",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://banking.postbank.de/*",
    "https://raw.githubusercontent.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://banking.postbank.de/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ]
}
