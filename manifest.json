{
  "manifest_version": 3,
  "name": "Dynamic Page Modifier",
  "version": "2.0",
  "description": "Dynamically loads and applies page modifications from GitHub with UI controls",
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "host_permissions": [
    "https://banking.postbank.de/*",
    "https://raw.githubusercontent.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Page Modifier",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://banking.postbank.de/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ]
}
